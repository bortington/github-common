name: Bump Workflow Tag

on:
  workflow_call:
    inputs:
      workflow-name:
        required: true
        type: string

jobs:
  update-tag:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      
      - name: Bump version and push tag
        id: tag_version
        uses: mathieudutour/github-tag-action@v6.0
        with:
          github_token: ${{ github.token }}
          dry_run: false
          default_bump: major
          create_annotated_tag: true
          tag_prefix: ${{ inputs.workflow-file }}/v
